<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.text.TextFlow?>
<HBox minHeight="600" prefWidth="600" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="core.Controller">
   <children>
      <VBox prefHeight="800.0" prefWidth="400.0">
         <children>
            <ListView fx:id="messagesTextArea" prefHeight="550.0" prefWidth="200.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets left="5.0" top="5.0" />
               </VBox.margin></ListView>
            <TextField fx:id="inputTextField" prefHeight="50.0" prefWidth="200.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </VBox.margin></TextField>
         </children></VBox>
      <VBox prefHeight="800.0" prefWidth="200.0">
         <children>
            <ListView fx:id ="usersListView" prefHeight="550.0" prefWidth="200.0">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </VBox.margin></ListView>
            <Button alignment="BOTTOM_CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="200" text="Button">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin></Button>
         </children></VBox>
   </children>
</HBox>
